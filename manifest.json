{
  "manifest_version": 3,
  "name": "Countdown Timer",
  "description": "Simple countdown timer extension",
  "version": "1.0",
  "permissions": ["storage", "alarms"],
  "action": {
    "default_popup": "popup.html"
  },
  "background": {
    "service_worker": "background.js"
  },
  "options_page": "options.html",
  "icons": {
    "128": "icons/icon128.png"
  }
}